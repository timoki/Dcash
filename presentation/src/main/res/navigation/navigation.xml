<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.dmonster.dcash.view.intro.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@navigation/navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dmonster.dcash.view.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@navigation/navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.dmonster.dcash.view.news.NewsFragment"
        android:label="NewsFragment"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_newsFragment_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/eventFragment"
        android:name="com.dmonster.dcash.view.event.EventFragment"
        android:label="EventFragment"
        tools:layout="@layout/fragment_event" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dmonster.dcash.view.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_lockScreenPermissionFragment"
            app:destination="@id/lockScreenPermissionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/pointFragment"
        android:name="com.dmonster.dcash.view.point.PointFragment"
        android:label="PointFragment"
        tools:layout="@layout/fragment_point" />

    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.dmonster.dcash.view.mypage.MyPageFragment"
        android:label="MyPageFragment"
        tools:layout="@layout/fragment_mypage" />

    <fragment
        android:id="@+id/lockScreenPermissionFragment"
        android:name="com.dmonster.dcash.view.lockscreen.set.LockScreenPermissionFragment"
        android:label="LockScreenPermissionFragment"
        tools:layout="@layout/fragment_set_lock_screen" />

    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.dmonster.dcash.view.newsDetail.NewsDetailFragment"
        android:label="NewsDetailFragment"
        tools:layout="@layout/fragment_news_detail">

        <argument
            android:name="model"
            android:defaultValue="@null"
            app:argType="com.dmonster.domain.model.paging.news.NewsListModel"
            app:nullable="true" />
        <action
            android:id="@+id/action_newsDetailFragment_to_newsViewTutorial"
            app:destination="@id/newsViewTutorial" />
    </fragment>

    <dialog
        android:id="@+id/basicDialog"
        android:name="com.dmonster.dcash.view.dialog.basic.BasicDialog"
        android:label="BasicDialog"
        tools:layout="@layout/dialog_basic">

        <argument
            android:name="model"
            app:argType="com.dmonster.dcash.view.dialog.basic.BasicDialogModel" />
    </dialog>

    <dialog
        android:id="@+id/networkFragment"
        android:name="com.dmonster.dcash.view.network.NetworkFragment"
        android:label="NetworkFragment"
        tools:layout="@layout/fragment_network">

        <argument
            android:name="networkState"
            android:defaultValue="CONNECT_ERROR"
            app:argType="com.dmonster.domain.type.NetworkState" />
    </dialog>

    <dialog
        android:id="@+id/newsViewTutorial"
        android:name="com.dmonster.dcash.view.dialog.newsViewTutorial.NewsViewTutorial"
        android:label="NewsViewTutorial"
        tools:layout="@layout/dialog_news_view_tutorial">

        <argument
            android:name="point"
            app:argType="integer" />
    </dialog>

    <action
        android:id="@+id/action_global_basicDialog"
        app:destination="@id/basicDialog" />
    <action
        android:id="@+id/action_global_networkFragment"
        app:destination="@id/networkFragment" />
    <action
        android:id="@+id/action_global_eventFragment"
        app:destination="@id/eventFragment" />
    <action
        android:id="@+id/action_global_pointFragment"
        app:destination="@id/pointFragment" />
    <action
        android:id="@+id/action_global_myPageFragment"
        app:destination="@id/myPageFragment" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_newsFragment"
        app:destination="@id/newsFragment" />
</navigation>